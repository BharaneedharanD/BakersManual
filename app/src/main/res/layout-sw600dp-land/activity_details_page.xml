<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context=".DetailsPage">
    <View
        android:id="@+id/screenView"
        android:tag="tablet"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/ListItems_layout"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <TextView
            android:id="@+id/ingredients_txt"
            android:text="@string/ingredients"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <FrameLayout
            android:id="@+id/ingredients_frame"
            android:layout_below="@id/ingredients_txt"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <TextView
            android:id="@+id/steps_txt"
            android:layout_below="@id/ingredients_frame"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:text="@string/steps"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <FrameLayout
            android:id="@+id/steps_frame"
            android:layout_below="@id/steps_txt"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/videoFrame"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"/>


</LinearLayout>